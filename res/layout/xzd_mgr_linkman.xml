<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/top2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/ca_selector_listitem_first"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="联系人" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="50dip"
            android:background="@color/black" />

        <EditText
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginTop="10dip"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint=" 请输入姓名" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/ca_selector_listitem_last"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="邮件" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="50dip"
            android:background="@color/black" />

        <EditText
            android:id="@+id/contact_remark"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint=" 邮件" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/ca_selector_listitem_first"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="电话" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="50dip"
            android:background="@color/black" />

        <EditText
            android:id="@+id/contact_phone"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@null"
            android:inputType="phone"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/ca_selector_listitem_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="QQ" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="50dip"
            android:background="@color/black" />

        <EditText
            android:id="@+id/contact_qq"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@null"
            android:editable="true"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/ca_selector_listitem_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="生日" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="50dip"
            android:background="@color/black" />

        <EditText
            android:id="@+id/contact_birthday"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@null"
            android:drawableRight="@drawable/arrow_right"
            android:editable="false"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/ca_selector_listitem_last"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:gravity="center"
            android:text="性别" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="50dip"
            android:background="@color/black" />

        <RadioGroup
            android:id="@+id/rg_gender"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center"
                android:text="男" />

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="女" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/deletegroup"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/selector_login_forget"
        android:gravity="center"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="删除联系人"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/edit_contact"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_margin="5dip"
        android:background="@drawable/selector_login_forget"
        android:gravity="center"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:text="编辑联系人"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="visible" />

</LinearLayout>