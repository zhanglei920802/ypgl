<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/top2" />

    <EditText
        android:id="@+id/groupname"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/ca_selector_listitem_single"
     
        android:gravity="left|center_vertical"
        android:hint=" 请输入分组名称" />
	
     <TextView android:id="@+id/deletegroup"   android:paddingLeft="20dip"
         android:layout_marginTop="30dip"
                android:paddingRight="20dip" android:background="@drawable/selector_login_forget" android:layout_margin="5dip" android:textColor="@color/white" android:layout_width="match_parent" android:gravity="center" android:layout_height="35dip" android:text="删除分组"    android:textSize="16sp"/>
          <TextView android:id="@+id/edit_group"   android:paddingLeft="20dip"
         android:layout_marginTop="30dip"
                android:paddingRight="20dip" android:background="@drawable/selector_login_forget" android:layout_margin="5dip" android:textColor="@color/white" android:layout_width="match_parent" android:gravity="center" android:layout_height="35dip" android:text="编辑分组"    android:textSize="16sp"/>
</LinearLayout>